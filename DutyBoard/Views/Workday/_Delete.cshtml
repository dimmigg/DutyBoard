@model WorkdayVM
@{
    string day;
    if (Model.Workday.IsAlways)
    {
        day = Model.Roster.DaysOfWeek.DayOfWeekName;
    }
    else
    {
        day = Model.Workday.DateWork.ToLongDateString();
    }
}
<form method="post" asp-action="Del">
    <div class="modal-content rounded-3 shadow">
        <input asp-for="Workday.WorkdayId" hidden />
        <div class="modal-body p-2 text-center">
            <h5 class="mb-1">Удалить дежурство?</h5>
            <p class="mb-0" style="font-size:16px"><b>@Model.Employee.Name</b></p>
            <p class="mb-0" style="font-size:14px">@day, @Model.Roster.StartTime.ToString(@"hh\:mm") - @Model.Roster.EndTime.ToString(@"hh\:mm")</p>
        </div>
        <div class="modal-footer flex-nowrap p-0">
            <button type="submit" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0 border-end"><b>Да, удалить</b></button>
            <button type="button" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0" data-bs-dismiss="modal">Не удалять</button>
        </div>
    </div>
</form>