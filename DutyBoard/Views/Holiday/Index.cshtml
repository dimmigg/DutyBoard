@model IEnumerable<HolidayVM>
@{
    ViewData["Title"] = "Отпуска";
}

<ul class="list-group col col-xl-4 col-lg-6">
    <li>
        <div class="row">
            <div class="col ms-2">
                <h4 class="text-start">Отпуска</h4>
            </div>
            <div class="col text-end me-3">
                <a href="#" class="add" title="Добавить" id="0" data-bs-toggle="modal" data-bs-target="#modal" onClick="Edit(this)" style="text-decoration: none;">
                    <i class="fa-solid fa-plus fa-2xl"></i>
                </a>
            </div>
        </div>
    </li>
    @foreach (var item in Model.OrderBy(x => x.Holiday.DateStart).ThenBy(x => x.Holiday.DateFinish).ThenBy(x => x.Employee.FullName))
    {
        <li>
            <div class="row">

                <div class="col-11">
                    <a href="#" class="col text-start" id=@item.Holiday.HolidayId.ToString() title="Изменить" data-bs-toggle="modal" data-bs-target="#modal" onClick="Edit(this)" style="text-decoration: none;">

                        <h5 class="mb-0">@item.Employee.FullName</h5>
                        <p class="mb-0">@item.Holiday.DateStart.ToString(@"dd.MM.yyyy") - @item.Holiday.DateFinish.ToString(@"dd.MM.yyyy")</p>
                    </a>
                </div>
                <div class="col-1  text-end ">
                    <a href="#" class="del" title="Удалить" id=@item.Holiday.HolidayId.ToString() data-bs-toggle="modal" data-bs-target="#modal" onClick="Delete(this)">
                        <h4 class="py-2">
                            <i class="fa-regular fa-trash-can del"></i>
                        </h4>
                    </a>
                </div>
            </div>
        </li>
    }
</ul>

<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="edit-content"></div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function Edit(obj) {
            let url = '@Url.Action("EditById")';
            let id = obj.id;
            $('#edit-content').load(url, { Id: id });
        }

        function Delete(obj) {
            let url = '@Url.Action("DeleteById")';
            let id = obj.id;
            $('#edit-content').load(url, { Id: id });
        }
    </script>
}