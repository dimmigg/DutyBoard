@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Сотрудники";
}
<div class="cards">
    <div class="card col col-xl-4 col-lg-6 ms-3">
        <div class="cardHeader">
            <h2>Сотрудники</h2>
            <a href="#" class="add" title="Добавить" id="0" data-bs-toggle="modal" data-bs-target="#modal" onClick="Edit(this, 'Employee')" style="text-decoration: none;">
                <i class="fa-solid fa-plus fa-2xl"></i>
            </a>
        </div>
        <div class="scroll-table">
            <div class="scroll-table-body second">
                <ul class="list-group">
                    @foreach (var item in Model)
                    {
                        <li>
                            <div class="row">
                                <a href="#" class="col text-start" id=@item.EmployeeId.ToString() data-bs-toggle="modal" data-bs-target="#modal" onClick="Edit(this, 'Employee')" style="text-decoration: none;">
                                    <div class="row">
                                        <div class="col-7">
                                            <h5 class="mb-0">@item.FullName</h5>
                                            <p class="mb-0">@item.LoginName</p>
                                        </div>
                                        <div class="col-5 align-items-center mt-2">
                                            @item.Phone
                                        </div>
                                    </div>


                                </a>
                                <div class="col-1 text-end">
                                    <a href="#" class="del" title="Удалить" id=@item.EmployeeId.ToString() data-bs-toggle="modal" data-bs-target="#modal" onClick="Delete(this, 'Employee')">
                                        <h4 class="py-2">
                                            <i class="fa-regular fa-trash-can"></i>
                                        </h4>
                                    </a>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="edit-content"></div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/pages/edit.js"></script>
}